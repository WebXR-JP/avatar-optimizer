<Project Sdk="Microsoft.NET.Sdk">

  <!-- Prevent native AOT from being imported and triggered -->
  <PropertyGroup>
    <NativeAOT>false</NativeAOT>
    <!-- Suppress the PublishTrimmed error from the LLVM compiler package -->
    <_NativeCompilationBuild>false</_NativeCompilationBuild>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <OutputType>Library</OutputType>
    <AssemblyName>TexTransCore</AssemblyName>
    <RootNamespace>TexTransCore</RootNamespace>
    <Nullable>enable</Nullable>
    <LangVersion>12.0</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>

    <!-- NuGet Package Metadata (Optional) -->
    <Version>1.0.0</Version>
    <Authors>rs64</Authors>
    <Description>A texture transformation and processing library for VRM models</Description>
    <License>MIT</License>
    <PackageProjectUrl>https://github.com/rs64/TexTransCore</PackageProjectUrl>

    <!-- WASM Configuration for managed IL compilation -->
    <!-- Note: We generate WASM components from managed DLL without native AOT -->
    <!-- This uses the componentize-dotnet SDK with managed IL runtime -->
    <RuntimeIdentifier>wasi-wasm</RuntimeIdentifier>
    <UseAppHost>false</UseAppHost>
    <!-- Disable trimming for managed DLL build -->
    <!-- Phase 2 will enable trimming when implementing proper MonoAOT -->
    <PublishTrimmed>false</PublishTrimmed>
    <TrimmerSingleWarn>false</TrimmerSingleWarn>
    <EnableTrimAnalyzer>false</EnableTrimAnalyzer>
    <DebugSymbols>false</DebugSymbols>
    <PublishReadyToRun>false</PublishReadyToRun>
    <PublishAot>false</PublishAot>
    <NativeCompile>false</NativeCompile>
    <InvariantGlobalization>true</InvariantGlobalization>
    <DebugType>none</DebugType>
    <!-- Explicit disabling of native AOT to prevent componentize-dotnet from triggering it -->
    <GenerateNativeCompilationTarget>false</GenerateNativeCompilationTarget>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <!-- Library project configuration -->
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <!-- componentize-dotnet configuration -->
    <MSBuildEnableWorkloadResolver>false</MSBuildEnableWorkloadResolver>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="src/**/*.cs" />
  </ItemGroup>

  <!-- Trimming root assembly configuration for library -->
  <ItemGroup>
    <TrimmerRootAssembly Include="TexTransCore" />
  </ItemGroup>

  <!-- WIT Interface configuration for componentize-dotnet -->
  <PropertyGroup>
    <!-- Ensure generated bindings include required using statements -->
    <WitGeneratedFilesRoot>obj/$(Configuration)/$(TargetFramework)/$(RuntimeIdentifier)/wit_bindgen</WitGeneratedFilesRoot>
  </PropertyGroup>

  <!-- WIT interface definition for componentize-dotnet -->
  <ItemGroup>
    <Wit Update="textrans.wit" World="textrans-component" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BytecodeAlliance.Componentize.DotNet.Wasm.SDK" Version="0.7.0-preview00010" />
  </ItemGroup>

  <!-- Disable native AOT compilation entirely for managed DLL build -->
  <!-- Phase 2 will implement proper MonoAOT WASM component generation -->
  <Target Name="GenerateNativeCompilationTarget">
    <!-- No-op: Native compilation skipped in managed DLL phase -->
  </Target>

  <!-- Override the main native compilation workflow target -->
  <Target Name="_ComputeAssembliesToCompileToNative">
    <!-- No-op: Native compilation skipped in managed DLL phase -->
  </Target>


</Project>
