<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <OutputType>Library</OutputType>
    <AssemblyName>TexTransCore</AssemblyName>
    <RootNamespace>TexTransCore</RootNamespace>
    <Nullable>enable</Nullable>
    <LangVersion>12.0</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>

    <!-- NuGet Package Metadata (Optional) -->
    <Version>1.0.0</Version>
    <Authors>rs64</Authors>
    <Description>A texture transformation and processing library for VRM models</Description>
    <License>MIT</License>
    <PackageProjectUrl>https://github.com/rs64/TexTransCore</PackageProjectUrl>

    <!-- NativeAOT-LLVM / WASM Configuration -->
    <RuntimeIdentifier>wasi-wasm</RuntimeIdentifier>
    <UseAppHost>false</UseAppHost>
    <PublishTrimmed>true</PublishTrimmed>
    <TrimmerSingleWarn>false</TrimmerSingleWarn>
    <EnableTrimAnalyzer>false</EnableTrimAnalyzer>
    <DebugSymbols>false</DebugSymbols>
    <PublishReadyToRun>false</PublishReadyToRun>
    <PublishAot>false</PublishAot>
    <SelfContained>true</SelfContained>
    <InvariantGlobalization>true</InvariantGlobalization>
    <DebugType>none</DebugType>
    <!-- Library project configuration -->
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <!-- componentize-dotnet configuration -->
    <MSBuildEnableWorkloadResolver>false</MSBuildEnableWorkloadResolver>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="src/**/*.cs" />
  </ItemGroup>

  <!-- Trimming root assembly configuration for library -->
  <ItemGroup>
    <TrimmerRootAssembly Include="TexTransCore" />
  </ItemGroup>

  <!-- WIT Interface configuration for componentize-dotnet -->
  <PropertyGroup>
    <!-- Ensure generated bindings include required using statements -->
    <WitGeneratedFilesRoot>obj/$(Configuration)/$(TargetFramework)/$(RuntimeIdentifier)/wit_bindgen</WitGeneratedFilesRoot>
  </PropertyGroup>

  <ItemGroup>
    <Wit Update="textrans.wit" World="textrans-component" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BytecodeAlliance.Componentize.DotNet.Wasm.SDK" Version="0.7.0-preview00010" />
  </ItemGroup>

</Project>
