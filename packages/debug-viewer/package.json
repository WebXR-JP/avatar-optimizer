{
  "name": "@xrift/avatar-optimizer-debug-viewer",
  "version": "0.1.0",
  "description": "VRM debug viewer using Three.js and @pixiv/three-vrm",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --pool=vmThreads",
    "manual-viewer": "pnpm exec tsx __tests__/manual/viewer.manual.ts"
  },
  "keywords": [
    "vrm",
    "three",
    "viewer",
    "debug",
    "3d",
    "model"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "three": "^0.181.1",
    "@pixiv/three-vrm": "^3.4.4"
  },
  "devDependencies": {
    "three": "^0.181.1",
    "@pixiv/three-vrm": "^3.4.4",
    "@types/three": "^0.181.0",
    "@types/node": "^24.10.0",
    "typescript": "^5.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.20.6",
    "vitest": "^2.1.4",
    "@vitest/coverage-v8": "^2.1.4"
  },
  "dependencies": {
    "neverthrow": "^8.2.0"
  }
}
