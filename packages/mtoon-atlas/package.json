{
  "name": "@xrift/mtoon-atlas",
  "version": "0.1.0",
  "description": "アトラス化したテクスチャのためのMToonMaterial",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "@pixiv/three-vrm": "^3.4.4",
    "@pixiv/three-vrm-materials-mtoon": "^3.4.4",
    "three": ">=0.181"
  },
  "devDependencies": {
    "@pixiv/three-vrm": "^3.4.4",
    "@pixiv/three-vrm-materials-mtoon": "^3.4.4",
    "@types/node": "^22.0.0",
    "@types/three": "^0.181.0",
    "@types/upng-js": "^2.1.5",
    "esbuild-raw-plugin": "^0.3.1",
    "three": "^0.181.1",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "three.js",
    "vrm",
    "mtoon",
    "shader",
    "instancing",
    "optimization"
  ],
  "author": "xrift",
  "license": "MIT",
  "packageManager": "pnpm@10.22.0",
  "dependencies": {
    "fast-png": "^7.0.1",
    "upng-js": "^2.1.0"
  }
}
