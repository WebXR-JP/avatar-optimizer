  #endif

  #ifdef DEBUG_SHADOW_VALUE
    // 実際のシャドウ値を可視化（白=影なし、黒=影あり）
    float debugShadow = 1.0;
    #if defined( USE_SHADOWMAP ) && NUM_DIR_LIGHT_SHADOWS > 0
