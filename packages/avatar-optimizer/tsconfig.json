{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": false, 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    // "declarationMap": true, // Removed
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
