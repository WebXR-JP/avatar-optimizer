{
  "name": "@xrift/avatar-optimizer-texture-atlas",
  "version": "0.1.0",
  "description": "A texture atlas library for both browser and Node.js environments.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "manual-atlas": "pnpm exec tsx __tests__/manual/atlas.manual.ts"
  },
  "keywords": [
    "texture",
    "atlas",
    "gltf",
    "vrm",
    "optimization"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "@gltf-transform/core": "^4.0.0",
    "@gltf-transform/extensions": "^4.0.0"
  },
  "devDependencies": {
    "@gltf-transform/core": "^4.0.0",
    "@gltf-transform/extensions": "^4.0.0",
    "@types/node": "^24.10.0",
    "canvas": "^3.2.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0",
    "vite": "^5.4.11",
    "vitest": "^2.1.4",
    "@vitest/coverage-v8": "^2.1.4"
  },
  "dependencies": {
    "jimp": "^1.6.0",
    "neverthrow": "^8.2.0",
    "rectpack-ts": "^0.0.2"
